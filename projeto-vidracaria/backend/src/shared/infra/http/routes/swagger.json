{
  "openapi": "3.0.0",
  "info": {
    "title": "Backend servidor trabalho Opção Vidraçaria",
    "description": "API com objetivo de desenvolver um trabalho para a disciplina de Desenvolvimento de Sistemas",
    "contact": {
      "email": "thiagosiqueira@unifei.edu.br"
    },
    "version": "1.0.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Endpoint pra testes"
    }
  ],
  "paths": {
    "/products": {
      "post": {
        "summary": "Cadastro de produto",
        "description": "Esta rota será responsável por cadastrar um novo produto",
        "tags": [
          "Products"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              },
              "examples": {
                "product": {
                  "value": {
                    "name": "Box blindado",
                    "description": "Box blindado com espessura 300mm",
                    "quantity": 6
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK!",
            "content": {
              "application/json": {
                "schema": {
                  "product": {
                    "type": "object",
                    "$": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Buscar produto pelo id",
        "description": "Buscar produto pelo id",
        "tags": [
          "Products"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do produto para busca",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK!",
            "content": {
              "application/json": {
                "schema": {
                  "product": {
                    "type": "object",
                    "$": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          }
        }
      }
    },
    "securitySchemas": {
      "bearerAuth": {
        "type": "http",
        "schema": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
